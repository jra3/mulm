{
	"name": "mulm",
	"version": "1.0.0",
	"description": "a Breeder Awards Program management platform",
	"main": "index.js",
	"_moduleAliases": {
		"@": "dist/src"
	},
	"scripts": {
		"dev": "concurrently nodemon \"postcss 'src/**/*.css' 'src/*.css' --base src --dir public --watch\"",
		"build": "tsc && npm run postcss && npm run copy-files",
		"postcss": "postcss 'src/**/*.css' 'src/*.css' --base src --dir public",
		"copy-files": "cp -r ./public ./dist/ && cp -r ./src/views ./dist/src/",
		"test": "NODE_ENV=test tsx --test src/__tests__/*.test.ts",
		"test:watch": "NODE_ENV=test tsx --test --watch 'src/**/*.test.ts'",
		"test:e2e": "playwright test",
		"test:e2e:headed": "playwright test --headed",
		"test:e2e:debug": "playwright test --debug",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:report": "playwright show-report",
		"start": "node dist/src/index.js",
		"sync-db": "./infrastructure/sync-db-from-production.sh",
		"mcp:species": "tsx src/mcp/species-server.ts",
		"mcp:members": "tsx src/mcp/member-server.ts",
		"lint": "eslint 'src/**/*.ts'",
		"lint:fix": "eslint 'src/**/*.ts' --fix",
		"format": "prettier --write \"src/**/*.{ts,js,json}\" \"scripts/**/*.{ts,js}\"",
		"format:check": "prettier --check \"src/**/*.{ts,js,json}\" \"scripts/**/*.{ts,js}\"",
		"script": "ts-node",
		"prepare": "husky || true",
		"cdk:deploy": "echo '⚠️  WARNING: Use npm run cdk:deploy:safe instead for safety checks!' && sleep 3 && cd infrastructure && npx cdk deploy",
		"cdk:deploy:safe": "./scripts/validate-cdk-changes.sh",
		"cdk:diff": "cd infrastructure && npx cdk diff",
		"cdk:synth": "cd infrastructure && npx cdk synth"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jra3/mulm.git"
	},
	"author": "John Allen",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/jra3/mulm/issues"
	},
	"homepage": "https://github.com/jra3/mulm#readme",
	"dependencies": {
		"@aws-sdk/client-s3": "^3.828.0",
		"@aws-sdk/s3-request-presigner": "^3.864.0",
		"@modelcontextprotocol/sdk": "^1.20.2",
		"@simplewebauthn/browser": "^13.2.2",
		"@simplewebauthn/server": "^13.2.2",
		"@types/multer": "^1.4.13",
		"cookie-parser": "^1.4.7",
		"csv-parse": "^6.1.0",
		"express": "^5.1.0",
		"express-rate-limit": "^8.0.1",
		"marked": "^17.0.0",
		"module-alias": "^2.2.3",
		"multer": "^2.0.1",
		"nodemailer": "^7.0.2",
		"pug": "^3.0.3",
		"sharp": "^0.34.3",
		"sqlite": "^5.1.1",
		"sqlite3": "^5.1.7",
		"uuid": "^13.0.0",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@faker-js/faker": "^9.8.0",
		"@playwright/test": "^1.58.1",
		"@simplewebauthn/types": "^12.0.0",
		"@tailwindcss/oxide": "^4.1.18",
		"@tailwindcss/postcss": "^4.1.18",
		"@types/cookie-parser": "^1.4.10",
		"@types/express-rate-limit": "^5.1.3",
		"@types/module-alias": "^2.0.4",
		"@types/nodemailer": "^6.4.17",
		"@types/papaparse": "^5.5.2",
		"@types/pug": "^2.0.10",
		"@types/supertest": "^6.0.3",
		"@typescript-eslint/eslint-plugin": "^8.54.0",
		"@typescript-eslint/parser": "^8.54.0",
		"autoprefixer": "^10.4.24",
		"aws-cdk-lib": "^2.236.0",
		"concurrently": "^9.2.1",
		"duckdb": "^1.4.4",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"globals": "^16.5.0",
		"husky": "^9.1.7",
		"lightningcss": "^1.31.1",
		"lint-staged": "^16.2.7",
		"nodemon": "^3.1.11",
		"papaparse": "^5.5.3",
		"playwright": "^1.56.1",
		"postcss": "^8.5.6",
		"postcss-cli": "^11.0.1",
		"prettier": "^3.8.1",
		"supertest": "^7.2.2",
		"tailwindcss": "^4.0.12",
		"ts-node": "^10.9.2",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.54.0"
	},
	"lint-staged": {
		"src/**/*.ts": [
			"eslint --fix"
		],
		"scripts/**/*.ts": [
			"eslint --fix"
		]
	},
	"keywords": []
}
