include ../mixins/date.pug

doctype html
html
	head
		meta(charset="utf-8")
		title Changes Requested for Your Submission
		style.
			body {
				font-family: Arial, sans-serif;
				line-height: 1.6;
				color: #333;
				max-width: 600px;
				margin: 0 auto;
				padding: 20px;
			}
			.header {
				background-color: #f59e0b;
				color: white;
				padding: 20px;
				text-align: center;
				border-radius: 8px 8px 0 0;
			}
			.content {
				background-color: #f8fafc;
				padding: 20px;
				border: 1px solid #e2e8f0;
			}
			.submission-details {
				background-color: white;
				padding: 15px;
				border-radius: 6px;
				margin: 15px 0;
				border-left: 4px solid #3b82f6;
			}
			.feedback-box {
				background-color: #fef3c7;
				border: 1px solid #f59e0b;
				padding: 15px;
				border-radius: 6px;
				margin: 15px 0;
			}
			.info-box {
				background-color: #dbeafe;
				border: 1px solid #3b82f6;
				padding: 15px;
				border-radius: 6px;
				margin: 15px 0;
			}
			.footer {
				background-color: #64748b;
				color: white;
				padding: 15px;
				text-align: center;
				border-radius: 0 0 8px 8px;
				font-size: 12px;
			}
			.button {
				display: inline-block;
				background-color: #2563eb;
				color: white;
				padding: 10px 20px;
				text-decoration: none;
				border-radius: 5px;
				margin: 10px 0;
			}
	body
		.header
			h1 Changes Requested

		.content
			p Hello #{member.display_name},

			p An admin has reviewed your submission and is requesting some changes before it can be approved.

			.submission-details
				h3 Submission Details:
				p <strong>Species:</strong> #{submission.species_common_name} (#{submission.species_latin_name})
				p <strong>Species Class:</strong> #{submission.species_class}
				p
					strong Reproduction Date:
					+longDate(submission.reproduction_date)
				p
					strong Submitted On:
					+longDate(submission.submitted_on)

			.feedback-box
				h3 Feedback from Admin:
				p= reason

			.info-box
				h3 âœ… Good News: Your Witness Confirmation is Preserved
				p If your submission was already screened and witnessed, you <strong>do not need to go through screening again</strong>. Your witness confirmation will be maintained when you resubmit.

			p <strong>Next Steps:</strong>
			ul
				li Review the admin's feedback above
				li Edit your submission to address the requested changes
				li Resubmit - it will go directly back to the approval queue
				li Your witness confirmation (if any) will be preserved

			p You can edit your submission here:
			a.button(href=`${domain}/submissions/${submission.id}` style="color: white; text-decoration: none;") Edit Submission

			p
				| If you have questions about the feedback, please&nbsp;
				a(href=`mailto:${programContactEmail}` style="color: #2563eb; text-decoration: underline;") contact the program administrators
				|  or reach out to a club member for assistance.

			p Thank you for your participation in the Breeder Awards Program!

		.footer
			p
				strong Brooklyn Aquarium Society
			p Educating Aquarists since 1911
			p
				a(href="https://basny.org" style="color: white;") basny.org
