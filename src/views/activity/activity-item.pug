include ../mixins/date.pug

mixin activityItem(activity)
    - const data = JSON.parse(activity.activity_data)
    
    .activity-item.bg-white.rounded-lg.shadow-sm.border.border-gray-200.p-4.mb-3
        .flex.items-start.space-x-3
            .flex-shrink-0
                if activity.activity_type === 'submission_approved'
                    .w-8.h-8.bg-green-100.rounded-full.flex.items-center.justify-center
                        svg.w-4.h-4.text-green-600(fill="currentColor" viewBox="0 0 20 20")
                            path(fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd")
                else if activity.activity_type === 'award_granted'
                    .w-8.h-8.bg-yellow-100.rounded-full.flex.items-center.justify-center
                        svg.w-4.h-4.text-yellow-600(fill="currentColor" viewBox="0 0 20 20")
                            path(d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z")
            
            .flex-1.min-w-0
                if activity.activity_type === 'submission_approved'
                    include submission-approved
                else if activity.activity_type === 'award_granted'
                    include award-granted

                .text-xs.text-gray-500.mt-1
                    +relativeDate(activity.created_at, "Activity occurred")