include ../mixins/card.pug

//- Tank Preset Card (read-only view)
+card({extraClasses: 'tank-preset-card'})
	.flex.justify-between.items-start.mb-2
		h3.font-bold.text-lg= preset.preset_name
		.flex.gap-2
			button.secondary.text-sm.px-2.py-1(
				type="button"
				hx-get=`/account/tanks/${encodeURIComponent(preset.preset_name)}/edit`
				hx-target="closest .tank-preset-card"
				hx-swap="outerHTML"
			) Edit
			button.destructive.text-sm.px-2.py-1(
				type="button"
				hx-delete=`/account/tanks/${encodeURIComponent(preset.preset_name)}`
				hx-target="closest .tank-preset-card"
				hx-swap="outerHTML"
				hx-confirm=`Delete tank preset "${preset.preset_name}"?`
			) Delete

	//- Tank details in a grid
	.grid.grid-cols-2.gap-x-4.gap-y-2.text-sm(class="sm:grid-cols-3")
		if preset.tank_size
			div
				span.text-gray-600 Tank Size:
				span.ml-1.font-medium= preset.tank_size
		if preset.filter_type
			div
				span.text-gray-600 Filter:
				span.ml-1.font-medium= preset.filter_type
		if preset.temperature
			div
				span.text-gray-600 Temperature:
				span.ml-1.font-medium= preset.temperature
		if preset.ph
			div
				span.text-gray-600 pH:
				span.ml-1.font-medium= preset.ph
		if preset.gh
			div
				span.text-gray-600 GH:
				span.ml-1.font-medium= preset.gh
		if preset.specific_gravity
			div
				span.text-gray-600 Specific Gravity:
				span.ml-1.font-medium= preset.specific_gravity
		if preset.water_change_volume
			div
				span.text-gray-600 Water Change Volume:
				span.ml-1.font-medium= preset.water_change_volume
		if preset.water_change_frequency
			div
				span.text-gray-600 Frequency:
				span.ml-1.font-medium= preset.water_change_frequency
		if preset.substrate_type
			div
				span.text-gray-600 Substrate:
				span.ml-1.font-medium= preset.substrate_type
		if preset.substrate_depth
			div
				span.text-gray-600 Substrate Depth:
				span.ml-1.font-medium= preset.substrate_depth
		if preset.substrate_color
			div
				span.text-gray-600 Substrate Color:
				span.ml-1.font-medium= preset.substrate_color
