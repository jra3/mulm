doctype html

html
  head
    title= title
    script(src='https://unpkg.com/htmx.org@2.0.4')
    link(rel='stylesheet', href='/index.css')

  body.flex-col
    h2.text-2xl= title

    - const heading = ['font-bold', 'text-lg', 'm-2'];
    .flex
      span.min-w-200(class=heading) Member Name
      span(class=heading) Species Name
      span(class=heading) Submission Date

    each sub in submissions
      form(hx-post="/admin/bap/approve")
        .flex
          span= sub.member_name
          span= sub.species_name
          span= sub.submission_date
          input(name="id", type="hidden", value=sub.id)
          input(name="approvedBy", type="hidden", value="honk")
          input(name="points", type="text" placeholder="Points")

          button(type="submit") Approve

