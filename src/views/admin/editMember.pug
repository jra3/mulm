tr(class="bg-blue-50")
	- const stringCell = ['p-3', 'text-left', 'border-b', 'border-gray-200'];
	- const numberCell = ['p-3', 'text-right', 'border-b', 'border-gray-200'];
	- const centerCell = ['p-3', 'text-center', 'border-b', 'border-gray-200'];

	td(class=numberCell)
		.flex.gap-2.items-center.justify-end
			form(
				hx-target="closest tr"
				hx-swap="outerHTML"
				hx-include="closest tr"
				hx-patch=`/admin/members/${member.id}`
				hx-trigger="submit")
				button(type="submit" class="px-3 py-1 bg-green-600 text-white rounded hover:bg-green-700") Save
			button(
				hx-target="closest tr"
				hx-swap="outerHTML"
				hx-get=`/admin/members/${member.id}/row`
				class="px-3 py-1 bg-gray-500 text-white rounded hover:bg-gray-600") Cancel

	td(class=centerCell)
		input(
			checked=member.is_admin == 1
			name="is_admin"
			type="checkbox"
			class="w-4 h-4")

	td(class=stringCell)
		input(name="display_name" value=member.display_name class="w-full px-2 py-1 border rounded")

	td(class=stringCell)
		input(name="contact_email" value=member.contact_email class="w-full px-2 py-1 border rounded")

	td(class=numberCell)
		span(class="text-gray-600" title=`Level: ${member.fish_level || 'None'}`)= member.fishTotalPoints || 0

	td(class=numberCell)
		span(class="text-gray-600" title=`Level: ${member.plant_level || 'None'}`)= member.plantTotalPoints || 0

	td(class=numberCell)
		span(class="text-gray-600" title=`Level: ${member.coral_level || 'None'}`)= member.coralTotalPoints || 0
