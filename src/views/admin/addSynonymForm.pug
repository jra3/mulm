//- HTMX partial for adding a new synonym
.flex.items-center.gap-3.p-3.bg-blue-50.rounded.border.border-blue-200
  form.flex-1.grid.gap-3(
    class="md:grid-cols-2"
    hx-post=`/admin/species/${groupId}/synonyms`
    hx-target="this"
    hx-swap="outerHTML"
  )
    div
      input.text-input(
        type="text"
        name="common_name"
        placeholder="Common Name"
        required
      )
    div
      input.text-input(
        type="text"
        name="scientific_name"
        placeholder="Scientific Name"
        required
      )
  .flex.gap-2
    button.primary.text-sm(
      type="button"
      onclick="this.closest('form').requestSubmit()"
    ) Save
    button.outline.text-sm(
      type="button"
      onclick="this.closest('.flex.items-center').remove()"
    ) Cancel
