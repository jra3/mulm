{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": ".",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"strict": true,

		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"types": ["node"],

		"baseUrl": ".",
		"paths": {
			"@/*": [ "src/*" ]
		}
	},
	"exclude": ["infrastructure/cdk.out", "node_modules", "dist", "scripts", "src/__tests__", "**/*.test.ts", "src/mcp"]
}
