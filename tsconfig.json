{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": ".",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"strict": true,

		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"types": ["jest", "node"],

		"baseUrl": ".",
		"paths": {
			"@/*": [ "src/*" ]
		}
	},
	"exclude": ["infrastructure/cdk.out", "node_modules", "dist"]
}
