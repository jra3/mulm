{
	"compilerOptions": {
		"target": "es2022",
		"module": "commonjs",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"types": ["node"],
		"outDir": "../dist/scripts",
		"rootDir": ".",
		"baseUrl": "..",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["**/*.ts"],
	"exclude": []
}